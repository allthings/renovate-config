{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "automerge": false,
  "automergeType": "branch",
  "commitMessagePrefix": "⬆️ ",
  "labels": ["renovate"],
  "minor": {
    "automerge": true
  },
  "packageRules": [
    {
      "packageNames": [
        "aws-sdk"
      ],
      "schedule": [
        "after 2am and before 7am on sunday"
      ]
    }
  ],
  "patch": {
    "automerge": true
  },
  "rebaseStalePrs": true,
  "schedule": [
    "on the 2nd and 4th day instance on saturday after 1am",
    "on the 2nd and 4th day instance on sunday after 1am"
  ],
  "timezone": "Europe/Berlin",
  "updateNotScheduled": false
}
